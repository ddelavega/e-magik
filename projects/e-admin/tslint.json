{
  "extends": "../../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "kebab-case"
    ],
    "only-arrow-functions": [
      false,
      "allow-declarations",
      "allow-named-functions"
    ]
  }
}
